class TodoList
	def initialize
	@tasks = []
	end
	
	def add_task(task)
		@tasks << task
	end
	
	def remove_task(task)
		if @tasks.include?(task)
			@tasks.delete(task)
		else
			puts "Task not found"
		end
	end

	def display_tasks
		if @tasks.empty?
			puts "No tasks in the list"
		else
			@tasks.each { |task| puts task }
		end
	end
end



require "date"
t = Date.today
pp "#{t.year} #{t.month}, #{t.day}"

